@using Library.App.Extension
@model IEnumerable<Library.App.ViewModels.AuthorViewModel>

@{
    ViewData["Title"] = "Lista de Autores";
}


<p>
    <a class="btn btn-info" asp-action="Create" asp-controller="Author" supress-by-claim-name="Author" supress-by-claim-value="Create">Novo Autor</a>
</p>
<table class="table table-hover">
    <thead class="thead-color">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.About)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @this.FormatDocument(item.TypePerson, item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
            <td class="text-right">
                <a class="btn btn-warning" asp-controller="Author" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
                <a class="btn btn-info" supress-by-claim-name="Author" supress-by-claim-value="Edit" asp-controller="Author" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> </a>
                
            </td>
        </tr>
}
    </tbody>
</table>
