@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/site.css" />

<section class="form-signin">
    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-floating">
            <label for="floatingInput" asp-for="Input.Email">Email</label>
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Input.Email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <label for="floatingPassword" asp-for="Input.Password">Senha</label>
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="Input.Password">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div>
            <p>
                Não está registrado? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Junte-se a nós.</a>
            </p>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
    </form>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
